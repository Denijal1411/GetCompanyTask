@model List<Data.User>
@{
    ViewBag.Title = "UserHome";
    var roles= GetCompany.Code.Roles.GetIDRolesString();
}
 
<div class="container">
    <div class="card">
        <div class="card-header text-secondary">
            <span>List of users</span>
            <a class="btn btn-outline-success float-right" href="@Url.Action("AddUser","User")">Add new user</a>
        </div>
        <div class="card-body">     
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Username</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Roles</th>
                        <th scope="col" class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row"></th>
                            <td>@(item.Name + " "+item.Surname)</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@(roles.FirstOrDefault(x=>Convert.ToInt32(x.Split('-')[1])==item.IDRole).Split('-')[0] )</td>
                            <td class="text-right">
                                @Html.ActionLink("Edit", "EditUser", "User", new { username = item.UserName }, new { @class = "btn btn-outline-info" })

                                @Html.ActionLink("Delete", "DeleteUser", "User", new { username = item.UserName }, new { @class = "btn btn-outline-danger" })

                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</div>



