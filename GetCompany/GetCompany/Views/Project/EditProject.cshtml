@model GetCompany.Models.ProjectModel
@{
    ViewBag.Title = "EditProject";
}

<div class="container">
    <div class="card">
        <div class="card-header text-secondary">
            <span>Edit Project</span>
            @Html.ActionLink("Cancel", "ProjectHome", "Project", null, new { @class = "btn btn-outline-info" })
        </div>   
        <div class="card-body mx-auto">
            @using (Html.BeginForm("EditProject", "Project", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label text-primary"><small>Project code:</small></label>
                    @Html.HiddenFor(x => x.ProjectCode)
                    @Html.TextBoxFor(x => x.ProjectCode, new { @class = "form-control mb-2", disabled = true })
                </div>
                <div class="form-group row">
                    <label class="col-sm-5 col-form-label text-primary"><small>Project name:</small></label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control mb-2", placeholder = "Project name:" })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "errorMessage" })
                </div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-outline-success">Save</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

