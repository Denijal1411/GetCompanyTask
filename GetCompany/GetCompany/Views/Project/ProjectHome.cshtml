@model List<Data.Project>
@{
    ViewBag.Title = "ProjectHome"; 
}


<div class="container">
    <div class="card">
        <div class="card-header text-secondary">
            <span>List of projects</span>
            <a class="btn btn-outline-success float-right" href="@Url.Action("AddProject","Project")">Add new project</a>
        </div>
        <div class="card-body"> 
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Code</th>
                        <th scope="col">Name</th>
                        <th scope="col">Project manager</th>
                        <th scope="col" class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <th scope="row"></th>
                        <td>@(item.ProjectCode)</td>
                        <th>@item.ProjectName</th> 
                        <td>@(item.User.Name +" "+item.User.Surname)</td>
                        <td class="text-right">
                            @Html.ActionLink("Edit", "EditProject", "Project", new { projectCode = item.ProjectCode }, new { @class = "btn btn-outline-info" })

                            @Html.ActionLink("Delete", "DeleteProject", "Project", new { projectCode = item.ProjectCode }, new { @class = "btn btn-outline-danger" })

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



